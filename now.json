{
  "version": 2,
  "name": "finager",
  "build": {
    "env": {
      "NODEJS_HELPERS": "0"
    }
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@now/node" },
    { "src": "openapi.json", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/payments/(?<id>[^/]+)",
      "dest": "/api/getPayment.js",
      "methods": ["GET"]
    },
    {
      "src": "/payments/(?<id>[^/]+)",
      "dest": "/api/updatePayment.js",
      "methods": ["PATCH"]
    },
    {
      "src": "/payments",
      "dest": "/api/addPayment.js",
      "methods": ["POST"]
    },
    {
      "src": "/open-api-spec",
      "dest": "/openapi.json"
    }
  ],
  "env": {
    "MONGO_URI": "@finagermongo"
  }
}